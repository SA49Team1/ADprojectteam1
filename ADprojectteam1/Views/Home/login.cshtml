@model ADprojectteam1.Models.Employee
<head>
    <style>
.form-horizontal{
    padding-left:40%;
}
</style>
</head>
<!-- Header -->
<header class="w3-container w3-theme w3-padding" id="myHeader">
    <div class="col-md-12 col-sm-12 text-center">
        <div class="col-md-12 col-sm-12"></div>
        <div class="col-md-12 col-sm-12">

            @using (Html.BeginForm("LoginCheckPassword", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))  //Password only post to checkpassword(),so user will not see it in browser.
            {
                <table>
                    <tr>
                        <td>@Html.LabelFor(x => x.UserName):</td>
                        <td>@Html.TextBoxFor(x => x.UserName, new { id = "username" })</td>  @*The name of this textbox is "UserName", the attribute of model user.*@
                        <td>@Html.ValidationMessageFor(x => x.UserName)</td>
                        <td></td>
                    </tr>

                    <tr><td><br></td></tr>

                    <tr>
                        <td>@Html.LabelFor(x => x.PassWord):</td>
                        <td>@Html.PasswordFor(x => x.PassWord, new { id = "password" })</td>
                        @*The name of this textbox is "Password", the attribute of model user.*@
                        <td>@Html.ValidationMessageFor(x => x.PassWord)</td>
                        @{ if ((bool)TempData["isAuth"] == false)
                            {
                                <td>Incorrect username or password</td>
                            }
                        }


                        <td align="right"><input id="submitBtn" type="submit" value="Log In" style="color:midnightblue" /></td>

                    </tr>

                </table>
            }



        </div>
    </div>
    
</header>



